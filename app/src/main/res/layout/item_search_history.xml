<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ic_touch_fg"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_36"
        android:paddingStart="@dimen/len_16"
        android:paddingEnd="@dimen/len_24" >

        <ImageView
            android:layout_width="@dimen/len_20"
            android:layout_height="@dimen/len_20"
            android:src="@drawable/ic_clock"
            android:layout_marginEnd="@dimen/len_8"
            android:tint="#A9A9A9"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/txt_keywords"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center_vertical"
            android:textColor="#A9A9A9"
            android:textSize="@dimen/font_16"
            tools:text="条目1"/>

        <ImageView
            android:id="@+id/img_remove"
            android:layout_width="@dimen/len_10"
            android:layout_height="@dimen/len_10"
            android:src="@drawable/ic_clear_2"
            android:layout_marginStart="@dimen/len_8"
            android:tint="#A9A9A9"
            android:background="@drawable/ic_touch_bg"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        android:layout_marginStart="@dimen/len_16"
        android:layout_marginEnd="@dimen/len_16"/>

</LinearLayout>
