<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/len_2"
    android:layout_marginBottom="@dimen/len_2"
    android:foreground="@drawable/ic_touch_fg"
    android:orientation="vertical"
    android:paddingStart="@dimen/len_16"
    android:paddingTop="@dimen/len_10"
    android:paddingEnd="@dimen/len_16"
    android:paddingBottom="@dimen/len_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/passerby" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_28"
            android:layout_marginEnd="@dimen/len_44"
            android:layout_marginStart="@dimen/len_60"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/font_16"
            tools:text="Mary Harmon" />
        <TextView
            android:id="@+id/txt_attend_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_24"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/len_44"
            android:layout_marginStart="@dimen/len_60"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLength="32"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/textSecond"
            android:textSize="@dimen/font_14"
            tools:text="Start:gqegwegrhnee的v去了女权沃恩我旁边那位日本" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_is_attended"
        tools:targetApi="LOLLIPOP"
        android:layout_width="@dimen/len_44"
        android:layout_height="@dimen/len_44"
        android:layout_gravity="end|center_vertical"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_not_attend" />

</FrameLayout>