<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".ui.activity.user.RegisterActivity">

    <ImageView
        android:layout_marginTop="@dimen/len_56"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_56"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <FrameLayout
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="28dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_phone"
            android:tint="@color/colorAccent" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:maxLines="1"
            android:hint="手机号"
            android:background="@null"
            android:inputType="phone"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/img_clear"
            android:layout_gravity="right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:src="@drawable/ic_cancel_black_32dp" />

        <View
            android:paddingTop="4dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="28dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_password"
            android:tint="@color/colorAccent" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:maxLines="1"
            android:hint="密码"
            android:inputType="textPassword"
            android:background="@null"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecond"
            android:textSize="18sp"/>

        <View
            android:paddingTop="4dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

    </FrameLayout>

    <TextView
        android:id="@+id/txt_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_12"
        android:layout_gravity="end"
        android:text="新用户注册 >"
        android:textColor="@color/textSecond"
         />

    <FrameLayout
        android:layout_marginTop="@dimen/len_48"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_login"
            android:elevation="8dp"
            android:layout_margin="@dimen/len_6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/logbutton" />

        <net.qiujuer.genius.ui.widget.Loading
            android:id="@+id/loading"
            android:layout_width="@dimen/len_28"
            android:layout_height="@dimen/len_28"
            android:layout_gravity="center"
            app:gAutoRun="false"
            app:gBackgroundColor="@null"
            app:gForegroundColor="@color/white"
            app:gForegroundLineSize="2dp" />

    </FrameLayout>



</LinearLayout>